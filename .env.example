# Required
SECRET_KEY=your-secret-key-min-50-chars-use-openssl-rand-hex-32
DEBUG=True

# Hosts (comma-separated). For production use your API domain.
ALLOWED_HOSTS=localhost,127.0.0.1
# Production example: ALLOWED_HOSTS=workshopapi.space,165.232.32.207,localhost,127.0.0.1

# CORS (comma-separated origins). Add your frontend URL(s).
# CORS_ALLOWED_ORIGINS=https://vehicle-workshop-app.vercel.app

# PostgreSQL (used when DATABASE_URL is set by Docker Compose or explicitly here)
POSTGRES_DB=workshop
POSTGRES_USER=workshop
POSTGRES_PASSWORD=change-me-in-production

# Optional: override DB (Docker Compose sets this automatically)
# DATABASE_URL=postgres://user:pass@localhost:5432/workshop

# Redis / Celery (Docker Compose sets broker/backend for containers)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Twilio (optional â€“ app starts without; notification tasks fail at send if missing)
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890
# Set True to send real SMS; when False (default), messages are logged to console.
# USE_TWILIO_SMS=False

# Base URL for links in notifications (invoice PDF, receipt). No trailing slash.
# APP_BASE_URL=http://localhost:8000
# Production: APP_BASE_URL=https://workshopapi.space

# Docker Compose only: web port (default 8000)
# WEB_PORT=8000
